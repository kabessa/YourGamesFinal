<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Definindo as dimensões. -->
    <dimen name="vertical">10dp</dimen>
    <dimen name="horizontal">25dp</dimen>

    <!-- Definindo um estilo para campos de texto. -->
    <style name="field">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Definindo um estilo para botões. -->
    <style name="button">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Definindo um estilo para informações. -->
    <style name="information">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>