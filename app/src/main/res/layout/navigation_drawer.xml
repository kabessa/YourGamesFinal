<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingVertical="@dimen/vertical"
    android:paddingHorizontal="@dimen/horizontal"
    android:background="@color/blue_700"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <View
        android:id="@+id/dr_drawer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/dr_drawer"/>

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/dr_drawer"
        app:layout_constraintStart_toStartOf="@id/dr_drawer"
        app:layout_constraintEnd_toEndOf="@id/dr_drawer"
        app:layout_constraintBottom_toBottomOf="@id/dr_drawer"
        android:background="@drawable/app_icon"/>

    <TextView
        android:id="@+id/your_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Games"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dr_drawer"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/your_games"
        app:layout_constraintStart_toEndOf="@id/dr_drawer"/>
</androidx.constraintlayout.widget.ConstraintLayout>